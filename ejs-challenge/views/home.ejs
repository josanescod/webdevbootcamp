<%- include ("./partials/header") -%>
    <h1>Home</h1>
    <p>
        <%= homeContent %>
    </p>

    <% posts.forEach(post=> { %>
        <div>
            <div class="container post">
                <h3>
                    <%= post.title %>
                </h3>
                <p>
                    <%= post.content.substring(0,100) + " ... " %><a href="/posts/<%= post.title %>">Read more</a>
                </p>
            </div>
        </div>
        <% }); %>
            <%- include ("./partials/footer") -%>